@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="row">
    <form asp-action="Search">
        <div class="col-md-6">
            <input asp-for="SearchText" class="form-control" placeholder="Search..." />
        </div>
        <div class="col-md-2">
            <input asp-for="SearchByBrands" />
            <label asp-for="SearchByBrands"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="SearchByCategories" />
            <label asp-for="SearchByCategories"></label>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default pull-right" value="Search" />
        </div>
    </form>
</div>
<br />


<div class="col-md-12 products-listing">
    @Html.DisplayFor(m => m.Products)
</div>

@if (Model.Products != null && Model.Products.Any())
{
    @await Html.PartialAsync("../_PaginationPartial", Model.Paging)
}