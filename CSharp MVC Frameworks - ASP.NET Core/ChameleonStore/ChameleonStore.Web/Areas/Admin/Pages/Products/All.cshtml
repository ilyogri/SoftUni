@page
@model AllModel
@{
    ViewData["Title"] = "All products";
}

<div class="container">
    <div class="row">
        <h2 class="m-1" style="color: white">@ViewData["Title"]</h2>
        <a href="/admin/products/create" class="btn btn-warning m-1">
            <strong>+</strong> Add Product
        </a>
        <table class="table table-striped table-bordered" style="background: white">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @Html.DisplayFor(x => x.Input)
                </tr>
            </tbody>
        </table>
    </div>
</div>
